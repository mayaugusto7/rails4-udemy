<%= form_for(@contact, html: {class: "basic-grey"}) do |f| %>

  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1>New Contact</h1>
  <h1>Editing Contact</h1>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label Contact.human_attribute_name("kind") %><br>
    <%= f.collection_select(:kind_id, @kind_options_for_select, :id, :description) %>
  </div>

   <%= f.fields_for :address do |address_fields| %>
      <div class="field">
        <%= address_fields.label  Address.human_attribute_name("street") %><br>
        <%= address_fields.text_field :street %>
      </div>
    
      <div class="field">
       <%= address_fields.label Address.human_attribute_name("city") %><br>
       <%= address_fields.text_field :city %>
      </div>

      <div class="field">
        <%= address_fields.label Address.human_attribute_name("state") %><br>
        <%= address_fields.select :state, state_options_for_select(@contact.address.state) %>
       </div>

   <% end %>
  
  <div class="field">
    <%= f.label :rmk %><br>
    <%= f.text_area :rmk %>
  </div>
  
  <div class="actions">
    <%= link_to t('buttons.show'), @contact, class: 'button-success' %>
    <%= link_to t('buttons.back'), contacts_path, class: 'button-back' %>
    <%= f.submit t('buttons.save'), class: 'button' %>
  </div>
<% end %>
