<div class="basic-grey">

<script>
  $.notify("<%= notice %>", "success");
</script>

<h1>Listando tipos</h1>

<table>
  <thead>
    <tr>
      <th><%= t('messages.description')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kinds.each do |kind| %>
      <tr style="background:<%= cycle('#CCC', '#FFF') %>">
        <td><%= kind.description %></td>
        <td><%= link_to t('buttons.edit'), edit_kind_path(kind), class: 'btn btn-warning' %></td>
        <td><%= link_to t('buttons.destroy'), kind, class: 'btn btn-danger', method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('buttons.home'), root_path, class: 'btn btn-success' %>
<%= link_to t('buttons.new'), new_kind_path, class: 'btn btn-primary' %>
</div>