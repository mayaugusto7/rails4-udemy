<div class="basic-grey">

<p id="notice"><%= notice %></p>

<h1>Listing Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr style="background:<%= cycle('#CCC', '#FFF') %>">
        <td><%= address.street %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= link_to t('buttons.show'), address, class: 'button-primary' %></td>
        <td><%= link_to t('buttons.edit'), edit_address_path(address), class: 'button-warning' %></td>
        <td><%= link_to t('buttons.destroy'), address, class: 'button', method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('buttons.new'), new_address_path, class: 'button-success' %>

</div>