<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">

        <h1 class="page-header">Listando Categorias</h1>

        <% if notice %>
        <div class="alert alert-success alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
          <%= notice %> <a href="#" class="alert-link"></a>.
        </div>
        <% end %>

        <br>

        <div class="panel panel-default">
          <div class="panel-heading">
            Categorias


            <div class="row">
              <div class="col-lg-12" align="right">
                <%= link_to new_backoffice_category_path, class: "btn btn-primary" do %>
                  <i class="fa fa-plus"></i> &nbsp;Novo
              <% end %>
              </div>
            </div>

          </div>
          <!-- /.panel-heading -->
          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                  <th>#</th>
                  <th>Descrição</th>
                  <th style="width: 150px;">Ações</th>
                </tr>
                </thead>
                <tbody>
                <% @categories.each do |category| %>
                  <tr>
                    <td><%= category.id %></td>
                    <td><%= category.description %></td>
                    <td>
                      <%= link_to edit_backoffice_category_path(category.id), class: "btn btn-warning btn-circle"  do %>
                        <i class="fa fa-edit"></i>
                      <% end %>
                      <button type="button" disabled="disabled" class="btn btn-danger btn-circle"><i class="fa fa-times"></i>
                      </button>
                    </td>
                  </tr>
                <% end %>

                </tbody>
              </table>
            </div>
            <!-- /.table-responsive -->
          </div>
          <!-- /.panel-body -->
        </div>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
