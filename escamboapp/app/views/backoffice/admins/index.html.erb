<h1 class="page-header">Listando Admins</h1>

<br>

<div class="panel panel-primary">
  <div class="panel-heading">
    Categorias


    <div class="row">
      <div class="col-lg-12" align="right">
        <%= link_to new_backoffice_admin_path, class: "btn btn-success" do %>
          <i class="fa fa-plus"></i> &nbsp;Novo
        <% end %>
      </div>
    </div>

  </div>

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
          <th>#</th>
          <th>Nome</th>
          <th>Email</th>
          <th>Tipo de Acesso</th>
          <th style="width: 150px;">Ações</th>
        </tr>
        </thead>
        <tbody>
        <% @admins.each do |admin| %>
          <tr>
            <td><%= admin.id %></td>
            <td><%= admin.name %></td>
            <td><%= admin.email %></td>
            <td><%= admin.role_br %></td>
            <td>
                <%= link_to edit_backoffice_admin_path(admin.id), class: "btn btn-warning btn-circle"  do %>
                  <i class="fa fa-edit"></i>
                <% end %>

                <% if current_admin.id != admin.id %>
                  <%= link_to backoffice_admin_path(admin), method: :delete, class: "btn btn-danger btn-circle",
                              data: {confirm: "Você deseja realmente excluir o <b>#{admin.email}</b>?"}  do %>
                    <i class="fa fa-times"></i>
                  <% end %>
                <% else %>
                  <%= link_to "#", disabled: "disabled", class: "btn btn-danger btn-circle" do %>
                    <i class="fa fa-times"></i>
                  <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>