<h1 class="page-header"><%= action %></h1>

<% if @admin.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <a href="#" class="alert-link"></a>
    <ul>
      <% @admin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="panel panel-primary">

  <div class="panel-heading">
    Admin
  </div>

  <div class="panel-body">


    <div class="col-lg-6">

      <%= form_for([:backoffice, @admin]) do |f| %>

        <div class="form-group">
          <label>Email</label>
          <%= f.text_field :email, class: "form-control", placeholder: "Email Admin"%>
        </div>

        <div class="form-group">
          <label>Senha</label>
          <%= f.password_field :password, class: "form-control", placeholder: "Senha"%>
        </div>

        <div class="form-group">
          <label>Confirmar Senha</label>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmar Senha"%>
        </div>

        <div class="form-group" align="right">
          <button type="submit" class="btn btn-success">Salvar</button>
        </div>

      <% end %>

    </div>
  </div>
</div>
