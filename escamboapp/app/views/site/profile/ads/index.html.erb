
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="page-header"> Anúncios </h3>

    <div class="row">
      <div class="col-lg-12" align="right">
        <%= link_to new_site_profile_ad_path, class: "btn btn-success" do %>
          <i class="fa fa-plus"></i> &nbsp;Novo
        <% end %>
      </div>
    </div>

  </div>

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
          <th>#</th>
          <th>Titulo</th>
          <th>Descrição</th>
          <th>Preço</th>
          <th>Imagem</th>
          <th style="width: 150px;">Ações</th>
        </tr>
        </thead>
        <tbody>
        <% @ads.each do |ad| %>
          <tr>
            <td><%= ad.id %></td>
            <td><%= ad.title %></td>
            <td><%= ad.description %></td>
            <td><%= humanized_money_with_symbol ad.price %></td>
            <td><%= image_tag ad.picture.url(:thumb) %></td>

            <td>
              <%= link_to edit_site_profile_ad_path(ad.id), class: "btn btn-warning btn-circle"  do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <button type="button" disabled="disabled" class="btn btn-danger btn-circle"><i class="fa fa-times"></i>
              </button>
            </td>
          </tr>
        <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>
