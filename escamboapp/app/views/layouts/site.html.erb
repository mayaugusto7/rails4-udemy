<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Escamboapp</title>

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= stylesheet_link_tag 'site', media: 'all' %>

  <%= csrf_meta_tags %>
</head>

<body>
<div id="global-spin" class="loading" style="display: none">Loading&#8230;</div>

<%= render partial: 'layouts/site_shared/navigation' %>

<div class="container">

  <!--   <p><%#= params %></p>-->
  <!--   <p><%#= controller_name %></p>-->
  <!--   <p><%#= controller_path %></p>-->

  <%= form_tag site_search_path, method: :get do %>

  <div class="row">
    <div class="well well-sm">
      <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">


          <div class="input-group">
            <%= text_field_tag(:q, params[:q], { class: 'form-control', placeholder: 'Pesquisar por...'}) %>
            <span class="input-group-btn">
              <%= submit_tag('Pesquisar', class: 'btn btn-primary') %>
              </span>
          </div>
        </div>
        <div class="col-lg-3"></div>
      </div>
    </div>
  </div>

  <% end %>

  <div class="row">

    <%= render partial: 'layouts/site_shared/sidebar' %>

    <div id="home-detail" class="col-md-9">

      <% if controller_path == 'site/home' %>
        <%= render partial: 'layouts/site_shared/carousel' %>
      <% end %>

      <div class="row">
        <%= yield %>
      </div>

    </div>

  </div>

</div>





<%= render partial: 'layouts/site_shared/footer' %>

<%= javascript_include_tag 'application' %>
<%= javascript_include_tag 'site' %>

<%= render partial: "layouts/shared/notifications" %>
</body>

</html>
